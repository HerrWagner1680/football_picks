<% if pickcharts.count === 0 %>
	<h1>NO GAMES POSTED -- TRY AGAIN LATER</h1>
<% end %>

<% if pickcharts.count > 0 %>
	<table class="center new_chart_picks">
		<tr>
			<td>Week</td>
			<td>Visitor</td>
			<td>Vis Record</td>
			<td>............. </td>
			<td>Home</td>
			<td>H Record</td>
			<td>Game Time</td>
		</tr>

<%= form_for Pick.new, url: picks_path, method: :post do |f| %>
		<% pickcharts.each do |pickchart| %>

		<tr>
			<td><%= pickchart.week %></td>
			<td class="vis"><input type="radio" onclick="highlightPicks(this)" value="visit" name=<%="picks[]#{pickchart.id}"%>><%= mark_v_pick(pickchart.id, current_user) %></td>
			<!-- pickchart.vteam -->
			<td><%= pickchart.vt_rec %></td>
			<td>.... at ....</td>
			<td class="hom"><input type="radio" onclick="highlightPicks(this)" value="home" name=<%= "picks[]#{pickchart.id}"%>><%= mark_h_pick(pickchart.id, current_user) %></td>
			<!-- pickchart.hteam -->
			<td><%= pickchart.ht_rec %></td>
			<td><%= pickchart.gametime %></td>
		</tr>
<% end %> <!-- end of pickcharts each loop -->

		<td></td>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
		<td></td>		
		<td><%= f.submit "SAVE", id: 'link_button'%></td>
<% end %> <!-- end of the form -->	

	</table>

<% end %> <!-- end of the if pickcharts -->
