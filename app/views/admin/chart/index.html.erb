	<section class="pc_hide">
		<%= form_for Pickchart.new, url: admin_chart_index_path, method: :post do |f| %>
		  <div class="chart">Wk: <%= f.text_field :week, :class => "t_field" %></div>
		  <!-- <div class="chart">xxxx</div> -->
		  <div class="chart">Vis : <%= f.text_field :vteam %><div/>
		  <div class="chart">V rec : <%= f.text_field :vt_rec, :class => "t_field" %><div/>
		  <div class="chart">Hom : <%= f.text_field :hteam %><div/>
		  <div class="chart">H rec : <%= f.text_field :ht_rec, :class => "t_field" %><div/>
		  <div class="chart">G tim : <%= f.text_field :gametime %></div>
		  <%= f.submit %>
		<% end %>
	</section>
<h5>button - create/save new chart</h5>
<a class="pc_hide clicky" onclick="hidePC(true)">button - select your picks</a>
<a class="pick_hide clicky" onclick="hidePC(false)">button - see pickchart template</a>

