div {
	display: inline;
}

.pick_hide{
	color: red;
	display: none;
}

.clicky{
	cursor: pointer;
	background-color: #CCC;
}

.pc_hide{
	color: blue;
	cursor: pointer;
}

td input[type="radio"]{
	background-color: orange;
	border-color: red;
}

td input:checked{
	background-color: #A1EFB4;
}

td input[disabled]{
	display: none;
}

.new_chart_picks tr:nth-child(even) {
	background: #d5ecef; 
} 

.new_chart_picks tr:nth-child(odd) {
	background: #e8edf6;
}

.new_chart_picks tr:nth-child(1) {
	background: #d5ecef;
}

