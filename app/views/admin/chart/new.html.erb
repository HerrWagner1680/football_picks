<h1> ADD TO TEMPLATE CHART FOR WEEK <%= @latest %> </h1>
<% if @latest_charts %>
	<table class="new_chart">
		<tr>
		<!--	<td>USER ID</td>  -->
			<td>Week</td>
			<td>Visitor</td>
			<td>Vis Record</td>
			<td class="pick_hide">............. </td>
			<td>Home</td>
			<td>H Record</td>
			<td>Game Time</td>
		</tr>

<%= form_for @latest_charts, url: admin_chart_index_path, method: :delete do |f| %>
		<% @latest_charts.each do |pickchart| %>


		<tr>
		<!-- <div class="pick_div"> -->
		<!--	<td><%= current_user.id %></td> -->
			<td class="week_table"><%= pickchart.week %></td>
		<!-- remember remove pickchart id later -->
