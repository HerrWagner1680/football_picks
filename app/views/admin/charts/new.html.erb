<%= javascript_include_tag "chart" %>
<%= link_to ("BACK TO ADMIN HOME"), "/admin", method: :get %>
<h3>NOTE - Only the newest week (highest week number) is accessible to users.</h3>
<h5>Week numbers 18, 19, and 20 should be used instead of Wild Card 1, Wild Card 2, and Championship -- since the program searches for a number</h5>

<br>
<h1> ADD TO TEMPLATE CHART FOR WEEK <%= latest_wk(@pickcharts) %> </h1>
<% if @latest_charts %>
	<table class="new_chart">
		<tr>
		<!--	<td>USER ID</td>  -->
			<td>Week</td>
			<td>Visitor</td>
			<td>Vis Record</td>
			<td class="pick_hide">............. </td>
			<td>Home</td>
			<td>H Record</td>
			<td>Game Time</td>
		</tr>

<%= form_for Pickchart.new, url: admin_charts_path, method: :post do |f| %>
		<% @latest_charts.each do |pickchart| %>


		<tr>
		<!-- <div class="pick_div"> -->
		<!--	<td><%= current_user.id %></td> -->
			<td class="week_table game_text" pc=<%= "#{pickchart.id}"%>><%= pickchart.week %></td>
		<!-- remember remove pickchart id later -->
			<td class="vis team_table game_text" pc=<%= "#{pickchart.id}"%>><input type="radio" onclick="highLight(this)" value="visit" name=<%="picks[]#{pickchart.id}"%> disabled="true" ><%= pickchart.vteam %></td>
			<td class="record game_text" pc=<%= "#{pickchart.id}"%>><%= pickchart.vt_rec %></td>
			<td class="pick_hide">.... at ....</td>
			<td class="hom team_table game_text" pc=<%= "#{pickchart.id}"%>><input type="radio" onclick="highLight(this)" value="home" name=<%= "picks[]#{pickchart.id}"%> disabled="true"><%= pickchart.hteam %></td>
			<td class="record game_text" pc=<%= "#{pickchart.id}"%>><%= pickchart.ht_rec %></td>
			<td class="gtime_table game_text" pc=<%= "#{pickchart.id}"%>><%= pickchart.gametime %></td>


          <td class="game_text" pc=<%= "#{pickchart.id}"%>><button class="buttonGrey" pc=<%= "#{pickchart.id}"%> onclick=<%= "asdfasdf(#{ pickchart.id })"%> type="button">&nbsp;&nbsp;&nbsp;&nbsp;edit&nbsp;&nbsp;&nbsp;&nbsp;</button></td>
			<td class="game_text" pc=<%= "#{pickchart.id}"%>><%= link_to(
          ("delete"),
          "/admin/chart/#{ pickchart.id }",
          method: :delete, data: {confirm: "Are you sure?"} ) %></td>
		<!-- </div> -->
			<!-- <td><%= f.submit %></td> -->
		</tr>


		<tr>
		<!-- <div class="pick_div"> -->
		<!--	<td><%= current_user.id %></td> -->
		<%= form_for Pickchart.find(pickchart.id), url: admin_charts_path, method: :patch do |f| %>
			<%= f.hidden_field :id, placeholder: pickchart.id, :input_html => { :value => pickchart.id } %>
			<td class="game_form EDchart wk" pc=<%= "#{pickchart.id}"%> ><%= f.text_field :week, placeholder: pickchart.week, :input_html => { :value => pickchart.week } %></td>
		<!-- remember remove pickchart id later -->
			<td class="game_form EDchart EDteams" pc=<%= "#{pickchart.id}"%>><%= f.text_field :vteam, placeholder: pickchart.vteam, :input_html => { :value => pickchart.vteam } %></td>
			<td class="game_form EDchart rec" pc=<%= "#{pickchart.id}"%>><%= f.text_field :vt_rec, placeholder: pickchart.vt_rec, :input_html => { :value => pickchart.vt_rec } %></td>
			<td class="pick_hide">.... at ....</td>
			<td class="game_form EDchart EDteams" pc=<%= "#{pickchart.id}"%>><%= f.text_field :hteam, placeholder: pickchart.hteam, :input_html => { :value => pickchart.hteam } %></td>
			<td class="game_form EDchart rec" pc=<%= "#{pickchart.id}"%>><%= f.text_field :ht_rec, placeholder: pickchart.ht_rec, :input_html => { :value => pickchart.ht_rec } %></td>
			<td class="pick_hide"  >edit / delete</td>
	
			<td class="game_form EDchart EDgametime" pc=<%= "#{pickchart.id}"%>><%= f.text_field :gametime, placeholder: pickchart.gametime, :input_html => { :value => pickchart.gametime } %></td>
			<td class="game_form"><%= f.submit "Update Game Listing" %></td>

          <td class="game_form" pc=<%= "#{pickchart.id}"%>><%= button_to(("update"), url: admin_charts_path, _method: :patch, class: "buttonGrey", type: 'button') %></td>
			<td class="game_form" pc=<%= "#{pickchart.id}"%>><%= link_to(
          ("delete"),
          "/admin/chart/#{ pickchart.id }",
          method: :delete, data: {confirm: "Are you sure?"} ) %></td>
        <% end %>
		<!-- </div> -->
			<!-- <td><%= f.submit %></td> -->
		</tr>
<% end %> <!-- end of pickcharts each loop -->

<% end %> <!-- end of the form -->	


	</table>

<% end %> <!-- end of the if pickcharts -->

<br>

	<section id="new_pc">
		<%= form_for Pickchart.new, url: admin_charts_path, method: :post do |f| %>
		<div ng-controller="TypeaheadCtrl">
		  <div class="chart wk"><%= f.text_field :week, :class => "t_field", :placeholder => '0'%></div>
		  <!-- <div class="chart">xxxx</div> -->
		  <div class="chart teams"><%= f.text_field :vteam, :placeholder => 'Visitor' %><div/>
		  <div class="chart rec"><%= f.text_field :vt_rec, :class => "t_field", :placeholder => '0-0' %><div/>
		  <div class="chart teams"><%= f.text_field :hteam, :placeholder => 'Home' %><div/>
		  <div class="chart rec"><%= f.text_field :ht_rec, :class => "t_field", :placeholder => '0-0' %><div/>

		  <div class="chart gametime"><%= f.text_field :gametime, :placeholder => 'Time' %></div>

		  <%= f.submit "Add Game Listing" %>
		<% end %>
	</section>

