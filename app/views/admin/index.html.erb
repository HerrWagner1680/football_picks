<%= javascript_include_tag "admin" %>

<h1>Admin#index</h1>
<p>Find me in app/views/admin/index.html.erb</p>



<% if @picks %>
	<table>

		<% @picks.reverse.each do |pick| %>
		<tr>
		<!-- <div class="pick_div"> -->
			<td>Week: <%= pick.pickchart.week %></td>
			<td>user pick: <%= pick.user_pick.first(8) %></td>
			<td>User Name: <%= pick.user.user_name.first(5) %></td>
		<!-- </div> -->
		</tr>

		<% end %>
	</table>
	<%= link_to ("pickcharts"), "/admin/chart", method: :get %>
	<%= button_to ("pickcharts"), "/admin/chart", method: :get %>
	<button><%= @current_user.user_name %> make your picks</button>
	<button>Create new week / pickchart</button>
	<br>
	<h4>EDIT USER SETTINGS</h4>
	<h4>CREATE / DELETE USERS</h4>
	<h5 onclick="hideCOF(true)"> CLICK HERE TO SEE WEEK 7 </h5>
	<h5 onclick="hideCOF(false)"> CLICK HERE TO SEE WEEK 6 </h5>
<% end %>
