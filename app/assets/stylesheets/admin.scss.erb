#horiz_overflow {
	border: 3px solid #444;
	background: #aaa; /* previously tan */
	width: 95%;
	overflow-x: scroll;
	overflow-y: hidden;
	/* -webkit-overflow-scrolling: touch; */
	white-space: nowrap;
	display: inline-block;
	margin-bottom: 10px;
}

.admin_link_button {
	margin-left: 25px;
