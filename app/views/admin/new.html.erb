<h1>CREATE A NEW USER - note you can not create admins</h1>
<div id="create_user_form">
<%= form_for @user, url: users_path, method: :post do |f| %>
	<%= f.hidden_field :admin, :value => false %>
  <span class="user_form">User Name: <%= f.text_field :user_name %></span>
  <span class="user_form">Email : <%= f.email_field :email %></span>
  <span class="user_form">Password : <%= f.password_field :password %></span>
  <%= f.submit %>
<% end %>
</div>