#horiz_overflow_standing {
	/* border: 3px solid #444; */
	max-width: 90%;
	overflow-x: scroll;
	overflow-y: hidden;
	-webkit-overflow-scrolling: touch;
	white-space: nowrap;
	display: inline-block;
}

.vertical_wrapper {
	margin-right: 10px;
	height: 350px;
	width: 216px; /* even number necessary for smooth edge */
	display: inline-block;
	position: relative;
	/* border-right: 5px solid white; */
}

.vertical {
	/* margin-right: 10px; */
	/* margin-left: 10px; */
	top: 55px;
	left: 0px;
	width: 216px; /* even number necessary for smooth edge */
	max-height: 250px;
	overflow-y: scroll;
	-webkit-overflow-scrolling: touch;
	display: inline-block;
	background: #eee;
	position: absolute;
	/* padding: 0px 25px 0px 15px; */
	/* border: 10px solid white; */
}

.fixed {
	/*margin-top: -430px;*/
	/* position: fixed; */
	height: 54px;
	width: 216px; /* even number necessary for smooth edge */
	top: 0px; /* or -4 */
    transform: translateX(-50%);
	background: linear-gradient(#fff,#ddd);
	display: inline-block;
	position: absolute;
	z-index: 99;
}

.fixed2 {
	/* margin-top: -430px; */
	/* margin-left: -50px; */
	/* position: fixed; */
	height: 30px;
	width: 216px; /* even number necessary for smooth edge */
	bottom: 15px;
	transform: translateX(-50%);
	background: linear-gradient(#555, #999);
	display: inline-block;
	position: absolute;
	z-index: 99;
}

